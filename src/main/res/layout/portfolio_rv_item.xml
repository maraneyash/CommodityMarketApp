<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idCVCurrency"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="20dp">

    <RelativeLayout
        android:id="@+id/idRLCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idTVSymbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/idTVProfit"
            android:padding="15dp"
            android:text="@string/symbol"
            android:textColor="@color/black_shade_1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTVQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="25dp"
            android:layout_toStartOf="@id/idTVProfitPercent"
            android:text="0 Qty"
            android:textColor="@color/black_shade_1" />

        <TextView
            android:id="@+id/idTVProfit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:text="+0"
            android:textColor="@color/black_shade_1"
            />

        <TextView
            android:id="@+id/idTVProfitPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:text="+0 % "
            android:textColor="@color/black_shade_1"
            />

        <TextView
            android:id="@+id/idTVInvested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="45dp"
            android:text="Invested 0"
            android:textColor="@color/black_shade_1" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
